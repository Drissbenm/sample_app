<h1>Inscription</h1>

<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :nom %><br />
    <%= f.text_field :nom %>
  </div>
  <div class="field">
  <%= f.label "Date de naissance" %><br />
  <%= f.date_select :age, :order => [:day, :month, :year],  
  :use_month_names => ['Janvier', 'Février', 'Mars', 'Avril', 'Mai', 
  'Juin', 'Juillet', 'Août', 'Septembre', 'Octobre', 'Novembre',
  'Décembre'],  :start_year => Date.today.year - 80, :end_year => Date.today.year - 6 %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="actions">
    <%= f.submit "Inscription" %>
  </div>
<% end %>
